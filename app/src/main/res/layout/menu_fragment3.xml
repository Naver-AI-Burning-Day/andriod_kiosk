<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuFragment3"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_mainActivity_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_logo"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_drinkActivity_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_drinkActivity_coke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="230dp"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_coke"/>

        <TextView
            android:id="@+id/tv_drinkActivity_coke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_drinkActivity_coke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="콜라"
            android:textSize="35sp"
            android:textColor="#000000"
            android:fontFamily="@font/americanol"/>

        <View
            android:id="@+id/v_drinkActivity_left"
            app:layout_constraintStart_toStartOf="@+id/layout_drinkActivity_left"
            app:layout_constraintTop_toBottomOf="@+id/tv_drinkActivity_coke"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#D3D3D3"/>

        <TextView
            app:layout_constraintStart_toStartOf="@+id/layout_drinkActivity_left"
            app:layout_constraintTop_toBottomOf="@+id/v_drinkActivity_left"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="1,000원"
            android:textSize="30sp"
            android:textColor="#F8B80A"
            android:fontFamily="@font/americanob"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_drinkActivity_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_drinkActivity_sprite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="230dp"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_sprite"/>

        <TextView
            android:id="@+id/tv_drinkActivity_sprite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_drinkActivity_sprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="사이다"
            android:textSize="35sp"
            android:textColor="#000000"
            android:fontFamily="@font/americanol"/>

        <View
            android:id="@+id/v_drinkActivity_right"
            app:layout_constraintStart_toStartOf="@+id/layout_drinkActivity_right"
            app:layout_constraintTop_toBottomOf="@+id/tv_drinkActivity_sprite"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#D3D3D3"/>

        <TextView
            app:layout_constraintStart_toStartOf="@+id/layout_drinkActivity_right"
            app:layout_constraintTop_toBottomOf="@+id/v_drinkActivity_right"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="1,000원"
            android:textSize="30sp"
            android:textColor="#F8B80A"
            android:fontFamily="@font/americanob"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>